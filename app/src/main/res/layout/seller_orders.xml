<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/GradientBlue"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/order_cutomerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer Name"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/order_phoneN0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="3dp"
            android:textStyle="normal"
            android:layout_toRightOf="@+id/order_cutomerName"
            />

        <TextView
            android:id="@+id/order_total_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Price"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:layout_below="@+id/order_phoneN0"
            android:gravity="center"
            android:layout_marginTop="10dp"
            />

        <TextView
        android:id="@+id/order_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textColor="@android:color/white"
        android:textSize="14dp"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:layout_below="@+id/order_total_price"
        android:gravity="center"
        android:layout_marginTop="10dp"
        />

        <TextView
            android:id="@+id/order_date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date Time"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:layout_below="@+id/order_address"
            android:gravity="center"
            android:layout_marginTop="10dp"
            />

      <Button
          android:id="@+id/show_allproduct_btn"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/order_date_time"
          android:layout_marginTop="20dp"
          android:layout_marginRight="20dp"
          android:layout_marginLeft="20dp"
          android:background="@android:color/white"
          android:text="Show Products"
          android:textColor="@color/colorPrimaryDark"
          android:textSize="18dp"/>
    </RelativeLayout>

</RelativeLayout>