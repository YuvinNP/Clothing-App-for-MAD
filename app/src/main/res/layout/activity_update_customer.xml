<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.clothing_app_mad.UpdateCustomer">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/formback">


            <LinearLayout
                android:id="@+id/backBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp">


                <Button
                    android:id="@+id/backBtnR"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/backbutton"
                    android:drawableStart="@drawable/backarrow"
                    android:paddingStart="15dp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/registerlayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="30dp"
                android:orientation="vertical"
                android:focusableInTouchMode="true"
                android:layout_below="@id/backBtn">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manjariregular"
                    android:text="@string/updateprofile"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    android:textSize="30sp" />

                <ImageView
                    android:id="@+id/productImage"
                    android:layout_width="170dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="60dp"
                    android:background="@android:color/black"
                    android:cropToPadding="false"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_menu_camera"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/fredokaoneregular"
                    android:text="@string/name"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/account"
                    android:ems="10"
                    android:fontFamily="@font/fredokaoneregular"
                    android:inputType="textPersonName"
                    android:textColor="@color/common_google_signin_btn_text_dark_default" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/fredokaoneregular"
                    android:text="@string/email"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/email"
                    android:ems="10"
                    android:fontFamily="@font/fredokaoneregular"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/common_google_signin_btn_text_dark_default" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/fredokaoneregular"
                    android:text="@string/contact"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/contactNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/phone"
                    android:ems="10"
                    android:fontFamily="@font/fredokaoneregular"
                    android:inputType="phone"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    />

                <TextView
                    android:id="@+id/textViewName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/fredokaoneregular"
                    android:text="@string/name"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/updateAddress1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/location"
                    android:ems="10"
                    android:fontFamily="@font/fredokaoneregular"
                    android:inputType="textPersonName"
                    android:textColor="@color/common_google_signin_btn_text_dark_default" />
                <EditText
                    android:id="@+id/updateAddress2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/location"
                    android:ems="10"
                    android:fontFamily="@font/fredokaoneregular"
                    android:inputType="textPersonName"
                    android:textColor="@color/common_google_signin_btn_text_dark_default" />
                <EditText
                    android:id="@+id/updateAddress3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/location"
                    android:ems="10"
                    android:fontFamily="@font/fredokaoneregular"
                    android:inputType="textPersonName"
                    android:textColor="@color/common_google_signin_btn_text_dark_default" />


                <Button
                    android:id="@+id/singupbtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/GradientBlue"
                    android:fontFamily="@font/fredokaoneregular"
                    android:shadowColor="@color/common_google_signin_btn_text_light_default"
                    android:text="UPDATE"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    android:textSize="20sp" />

            </LinearLayout>



        </RelativeLayout>


    </ScrollView>

</RelativeLayout>