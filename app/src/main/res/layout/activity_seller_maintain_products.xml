<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp"
    tools:context=".Seller.SellerMaintainProductsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/product_image_update"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:layout_margin="2dp"
            />

       <EditText
          android:id="@+id/product_name_update"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="Product Name"
            android:layout_below="@+id/product_image_update"
          android:textAlignment="center"
           android:layout_marginTop="20dp"
          android:textSize="20dp"
          android:textStyle="bold"
          android:textColor="@color/GradientBlue"/>

        <EditText
            android:id="@+id/product_price_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_name_update"
            android:hint="Product Price"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:textColor="@color/GradientBlue"/>

        <EditText
            android:id="@+id/product_description_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_price_update"
            android:hint="Product description"
            android:textAlignment="center"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/GradientBlue"/>

       <Button
            android:id="@+id/product_update_Btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/GradientBlue"
            android:textColor="@android:color/white"
            android:layout_marginTop="40dp"
            android:text="Update"
            android:layout_below="@+id/product_description_update"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>