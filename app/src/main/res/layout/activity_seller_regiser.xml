                    android:fontFamily="@font/fredokaoneregular"
                    android:text="@string/createpwrd"
                    android:textColor="@android:color/background_light"
                    android:textSize="18sp" />



                <EditText
                    android:id="@+id/crpwrd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/password"
                    android:ems="10"
                    android:fontFamily="@font/fredokaoneregular"
                    android:inputType="textPassword"
                    android:textColor="@android:color/background_light" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/fredokaoneregular"
                    android:text="@string/confirmpwrd"
                    android:textColor="@android:color/background_light"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/confpwrd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/password"
                    android:ems="10"
                    android:fontFamily="@font/fredokaoneregular"
                    android:inputType="textPassword"
                    android:textColor="@android:color/background_light" />


                <Button
                    android:id="@+id/signupbtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/GradientBlue"
                    android:fontFamily="@font/fredokaoneregular"
                    android:shadowColor="@android:color/background_light"
                    android:text="@string/signUp"
                    android:textColor="@android:color/background_light"
                    android:textSize="20sp" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/registerlayout"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">


