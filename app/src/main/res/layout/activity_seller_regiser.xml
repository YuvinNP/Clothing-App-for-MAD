                    android:layout_marginRight="75dp"
                    android:layout_toEndOf="@+id/textView8"
                    android:fontFamily="@font/fredokaoneregular"
                    android:text="@string/signIn"
                    android:textColor="@color/GradientBlue"
                    android:textSize="18sp" />

            </RelativeLayout>


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>